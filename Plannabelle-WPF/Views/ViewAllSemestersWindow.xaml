<Window x:Class="Plannabelle_WPF.Views.ViewAllSemestersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plannabelle_WPF.Views"
        mc:Ignorable="d"
        Title="ViewAllSemestersWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstSemesters" ItemsSource="{Binding Semesters}" SelectionChanged="lstSemesters_SelectionChanged" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding StartDate}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
